<com.ihandy.s2014011446.ui.widget.GestureFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_gesture_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    tools:context="com.ihandy.s2014011446.ui.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="@dimen/text_margin"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/about_icon_size"
                android:layout_height="@dimen/about_icon_size"
                android:layout_margin="@dimen/view_margin"
                android:src="@drawable/ic_news"/>
            <RelativeLayout
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/about_icon_size"
                android:layout_margin="@dimen/view_margin"
                android:layout_toRightOf="@+id/icon">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:layout_margin="@dimen/view_margin"
                    android:textSize="@dimen/text_size_title_bigger"/>
                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="开发人员：吴行行"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/view_margin"
                    android:textSize="@dimen/text_size_subhead"/>
        </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_title"
            android:text="应用介绍："
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_normal"
            android:text="本应用是一个简单新闻客户端\n"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:layout_alignTop="@+id/dateTextView"
            android:background="@color/divider_color"
            />
        <TextView
            android:id="@+id/title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_title"
            android:gravity="center"
            android:text="联系方式"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_title"
            android:gravity="center"
            android:text="cstwhh@gmail.com\n13269790568"
            android:autoLink="all|web"
            />
        <TextView
            android:id="@+id/title_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_title"
            android:gravity="center"
            android:text="学号：2014011446"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:textSize="@dimen/text_size_normal"
            android:text="如果您喜欢本应用或有任何意见或建议，可通过以上方式与我联系,感谢您的支持. "
            android:autoLink="all|web"
            />

    </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/common_toolbar"/>
</com.ihandy.s2014011446.ui.widget.GestureFrameLayout>
